
@model MyEcommerceAdmin.Models.Supplier
@{
    ViewBag.Title = "Supplier Details";
}

<section class="section about-section gray-bg" id="about">
    <div class="container">
        <div class="row align-items-center flex-row-reverse">
            <div class="col-lg-7">
                <div class="about-text go-to">
                    <h2 class="dark-color">Individual Supplier Details</h2>
                    <hr />
                    <h3 class="theme-color lead fs-2">@Html.DisplayFor(x=>x.CompanyName)</h3>
                    <div class="row about-list">
                        <div class="col-md-6">
                            <div class="media">
                                <label class="fs-4">Contact Name</label>
                                <p>@Html.DisplayFor(x => x.ContactName)</p>
                            </div>
                            <div class="media">
                                <label class="fs-4">Contact Title</label>
                                <p>@Html.DisplayFor(x => x.ContactTitle)</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label class="fs-4">E-mail</label>
                                <p>@Html.DisplayFor(x => x.Email)</p>
                            </div>
                            <div class="media">
                                <label class="fs-4">Phone</label>
                                <p>@Html.DisplayFor(x => x.Phone)</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label class="fs-4">Country</label>
                                <p>@Html.DisplayFor(x => x.Country)</p>
                            </div>
                            <div class="media">
                                <label class="fs-4">City</label>
                                <p>@Html.DisplayFor(x => x.City)</p>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="media">
                                <label class="fs-4">Address</label>
                                <p>@Html.DisplayFor(x => x.Address)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-lg-5">
                <div class="about-avatar">
                    <img src="~/Content/img/Supplier-Static-Img.jpg" width="350" height="350"/>
                </div>
            </div>
        </div>
        <div class="counter mt-4">
            <div class="row">
                <div class="col-6 col-lg-3">
                    <a href="@Url.Action("Index", "Supplier")" class="btn btn-danger btn-sm fs-4"><i class="fa-regular fa-hand-back-point-left"></i> Back to the list</a>
                </div>
            </div>
        </div>
    </div>
</section>


